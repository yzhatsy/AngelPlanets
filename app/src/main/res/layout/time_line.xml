<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_timeline_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体外驱虫"
            android:layout_centerVertical="true"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/defaultColor"/>
            <View
                android:id="@+id/view"
                android:layout_width="5dp"
                android:layout_height='2dp'
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/tv_timeline_clean"
                android:layout_centerVertical="true"
                android:background="#8FA6C6"/>
        <View
           android:id="@+id/view1"
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/view"
            android:layout_centerVertical="true"
           android:background="#8FA6C6"/>
        <View
           android:id="@+id/view2"
            android:layout_width="30dp"
            android:layout_height='2dp'
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/view1"
           android:background="#8FA6C6"/>
        <View
           android:id="@+id/view3"
            android:layout_width="30dp"
            android:layout_height='2dp'
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/view2"
           android:background="#8FA6C6"/>
        <View
           android:id="@+id/view4"
            android:layout_width="30dp"
            android:layout_height='2dp'
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/view3"
           android:background="#8FA6C6"/>
        <View
           android:id="@+id/view5"
            android:layout_width="30dp"
            android:layout_height='2dp'
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/view4"
           android:background="#8FA6C6"/>
            <View
                android:id="@+id/view6"
                android:layout_width="5dp"
                android:layout_height='2dp'
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/view5"
                android:layout_centerVertical="true"
                android:background="#8FA6C6"/>
            <TextView
                android:id="@+id/tv_timeline_clean1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="要驱虫了"
                android:layout_centerVertical="true"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/view6"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/defaultColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="360"
            android:textSize="9sp"
            android:layout_below="@id/view"
            android:layout_toRightOf="@+id/view"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="180"
            android:textSize="9sp"
            android:layout_below="@id/view1"
            android:layout_toRightOf="@+id/view1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90"
            android:textSize="9sp"
            android:layout_below="@id/view2"
            android:layout_toRightOf="@+id/view2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="9sp"
            android:layout_below="@id/view3"
            android:layout_toRightOf="@+id/view3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="9sp"
            android:layout_below="@id/view4"
            android:layout_toRightOf="@+id/view4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="9sp"
            android:layout_below="@id/view5"
            android:layout_toRightOf="@+id/view5"
            />

        </RelativeLayout>

</LinearLayout>