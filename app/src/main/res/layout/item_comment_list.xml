<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <com.angelplanets.app.view.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_comment_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:civ_border_color="#f1f1f1"
        app:civ_border_width="1dp" />

    <RelativeLayout
        android:id="@+id/rl_item_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_comment_item_icon"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/defaultColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_comment_name"
            android:layout_below="@id/tv_comment_name"
            android:layout_marginTop="2dp"
            android:textColor="#9B9B9B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_comment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_comment_time"
            android:layout_below="@id/tv_comment_time"
            android:layout_marginTop="3dp"
            android:textColor="@color/defaultColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_comment_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_comment_detail"
            android:layout_below="@id/tv_comment_detail"
            android:layout_marginTop="4dp"
            android:background="#f1f1f1"
            android:paddingBottom="4dp"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1" />

</RelativeLayout>