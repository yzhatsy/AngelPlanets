<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <com.angelplanets.app.view.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_comment_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:civ_border_color="#f1f1f1"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/tv_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@id/iv_comment_item_icon"
        android:layout_toRightOf="@id/iv_comment_item_icon"
        android:layout_marginLeft="10dp"
        android:text="name"
        android:textSize="12sp"
        android:textColor="@color/defaultColor"/>

    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_comment_name"
        android:layout_alignLeft="@id/tv_comment_name"
        android:text="6:00"
        android:textColor="#9B9B9B"/>

    <TextView
        android:id="@+id/tv_comment_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello world"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_comment_time"
        android:layout_alignLeft="@id/tv_comment_time"
        android:textSize="12sp"
        android:textColor="@color/defaultColor"/>
    <TextView
        android:id="@+id/tv_comment_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="12sp"
        android:layout_below="@id/tv_comment_detail"
        android:layout_alignLeft="@id/tv_comment_detail"
        android:background="#f1f1f1"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1"/>

</RelativeLayout>